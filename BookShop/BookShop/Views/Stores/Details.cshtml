@model BookShop.Models.Store
@using BookShop.Utility;

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>

<div class="form-group">
    @if (User.IsInRole(StaticDetails.AdminUser))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edytuj</a>
        <a asp-action="Index" class="btn btn-sm btn-success">Powrót</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-sm btn-success">Powrót</a>
    }
    
</div>
