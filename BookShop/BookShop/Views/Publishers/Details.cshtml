@using BookShop.Utility
@model BookShop.Models.Publisher
@{
    ViewData["Title"] = "Szczegóły";
}
<br />
<h2>Szczegóły wydawcy</h2>
<hr />

<div class="form-border">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Street" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Street" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="StreetNumber" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="StreetNumber" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="PostalCode" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="PostalCode" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="City" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="City" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Phone" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Phone" disabled class="form-control" />
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        @if (User.IsInRole(StaticDetails.AdminUser))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edytuj</a>
        }
        <a asp-action="Index" class="btn btn-sm btn-success">Powrót</a>
    </div>
</div>


